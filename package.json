{
  "name": "split-tests-monorepo",
  "private": true,
  "version": "0.1.1",
  "description": "Split test files in Jest and Cypress into parallel CI jobs",
  "author": {
    "name": "Kamil Kisiela",
    "email": "kamil.kisiela@gmail.com",
    "url": "https://github.com/kamilkisiela/split-tests"
  },
  "license": "MIT",
  "scripts": {
    "release": "changeset publish",
    "build": "tsc --project tsconfig.json && bob build",
    "test": "jest --no-cache --silent=false",
    "e2e": "cypress run"
  },
  "devDependencies": {
    "@changesets/cli": "~2.17.0",
    "@types/glob": "~8.1.0",
    "@types/node": "^22.9.3",
    "bob-the-bundler": "^3.0.0",
    "cypress": "~14.5.2",
    "jest": "27.5.1",
    "jest-junit": "~12.0.0",
    "typescript": "^4.1.3"
  },
  "workspaces": {
    "packages": ["packages/*"]
  }
}
